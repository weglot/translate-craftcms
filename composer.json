{
  "name": "weglot/craft-weglot",
  "description": "Translate your Craft website in 110+ languages within minutes with Weglot Translate, without any coding.",
  "type": "craft-plugin",
  "license": "MIT",
  "support": {
    "email": "support@weglot.com"
  },
  "require": {
    "php": ">=8.2",
    "ext-libxml": "*",
    "ext-simplexml": "*",
    "ext-curl": "*",
    "ext-filter": "*",
    "ext-iconv": "*",
    "ext-mbstring": "*",
    "craftcms/cms": "^5.0.0",
    "guzzlehttp/guzzle": "^7.10",
    "yiisoft/yii2": "^2.0",
    "psr/cache": "^3.0"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.88",
    "humbug/php-scoper": "^0.18",
    "phpstan/phpstan": "^2.1",
    "phpstan/phpstan-phpunit": "^2.0",
    "phpstan/phpstan-strict-rules": "^2.0",
    "phpunit/phpunit": "^11.5",
    "rector/rector": "^2.1",
    "shipmonk/composer-dependency-analyser": "^1.8",
    "symplify/easy-coding-standard": "^10.3"
  },
  "autoload": {
    "psr-4": {
      "weglot\\craftweglot\\": "src/",
      "Weglot\\Vendor\\Weglot\\": "dependencies_scoped/weglot-php/src/",
      "Weglot\\Vendor\\WGSimpleHtmlDom\\": "dependencies_scoped/simplehtmldom/src/",
      "Weglot\\Vendor\\WeglotLanguages\\": "dependencies_scoped/weglot-php/node_modules/@weglot/languages/dist/"
    },
    "files": [
      "src/bootstrap_simplehtmldom.php",
      "src/bootstrap_simplehtmldom_constants.php"
    ]
  },
  "extra": {
    "handle": "weglot",
    "class": "weglot\\craftweglot\\Plugin",
    "name": "weglot",
    "developer": "Weglot",
    "documentationUrl": "",
    "craft-plugin": {
      "icon": "src/resources/icon.svg"
    }
  },
  "scripts": {
    "check-cs": "php-cs-fixer fix --dry-run --diff",
    "fix-cs": "php-cs-fixer fix",
    "phpstan": "phpstan --memory-limit=1G",
    "check-dependency": "composer-dependency-analyser",
    "test": "phpunit tests",
    "rector": "rector",
    "scoper": [
      "bash -lc 'vendor/bin/php-scoper add-prefix --config=scoper.inc.php --output-dir=dependencies_scoped --force -q'",
      "bash -lc 'rsync -a dependencies/weglot-php/data/ dependencies_scoped/weglot-php/data/'",
      "bash -lc \"rsync -a --include='*/' --exclude='*' dependencies/weglot-php/ dependencies_scoped/weglot-php/\""
    ]
  },
  "config": {
    "sort-packages": true,
    "platform": {
      "php": "8.2"
    },
    "allow-plugins": {
      "yiisoft/yii2-composer": true,
      "craftcms/plugin-installer": true
    }
  },
  "conflict": {
    "weglot/weglot-php": "*",
    "weglot/simple_html_dom": "*",
    "glx77/morphism-php": "*"
  },
  "archive": {
    "exclude": [
      "dependencies/",
      "scoper.inc.php",
      "bin/",
      "tests/",
      ".github/",
      "phpunit.xml*"
    ]
  }
}
