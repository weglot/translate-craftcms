{
  "name": "weglot/craft-translate",
  "description": "Translate your Craft website in 110+ languages within minutes with Weglot Translate, without any coding.",
  "type": "craft-plugin",
  "license": "proprietary",
  "support": {
    "email": "support@weglot.com"
  },
  "require": {
    "php": ">=8.2",
    "ext-libxml": "*",
    "ext-simplexml": "*",
    "craftcms/cms": "^5.8.0",
    "guzzlehttp/guzzle": "^7.10",
    "yiisoft/yii2": "^2.0"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.88",
    "humbug/php-scoper": "^0.18",
    "phpstan/phpstan": "^2.1",
    "phpstan/phpstan-phpunit": "^2.0",
    "phpstan/phpstan-strict-rules": "^2.0",
    "phpunit/phpunit": "^11.5",
    "rector/rector": "^2.1",
    "shipmonk/composer-dependency-analyser": "^1.8",
    "tomasvotruba/type-coverage": "^2.0"
  },
  "autoload": {
    "psr-4": {
      "weglot\\craftweglot\\": "src/",
      "Weglot\\Vendor\\": "src/vendor/weglot/"
    },"classmap": [
      "src/vendor/weglot/build/vendor-src/"
    ],"files": [
      "src/vendor/weglot/build/vendor-src/simple_html_dom/src/simple_html_dom.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "weglot\\craftweglot\\tests\\": "tests/"
    }
  },
  "extra": {
    "handle": "weglot",
    "class": "weglot\\craftweglot\\Plugin",
    "name": "Weglot",
    "developer": "Weglot",
    "documentationUrl": "",
    "craft-plugin": {
      "icon": "src/resources/icon.svg"
    }
  },
  "scripts": {
    "check-cs": "php-cs-fixer fix --dry-run --diff",
    "fix-cs": "php-cs-fixer fix",
    "php-scoper": "php-scoper add-prefix scoper.inc.php",
    "phpstan": "phpstan --memory-limit=1G",
    "check-dependency": "composer-dependency-analyser",
    "test": "phpunit tests",
    "rector": "rector"
  },
  "config": {
    "sort-packages": true,
    "platform": {
      "php": "8.2"
    },
    "allow-plugins": {
      "yiisoft/yii2-composer": true,
      "craftcms/plugin-installer": true,
      "phpstan/extension-installer": true
    }
  }
}
